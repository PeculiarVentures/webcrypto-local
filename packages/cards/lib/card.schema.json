{
    "title": "JSON schema for card.json files",
    "$schema": "http://json-schema.org/draft-04/schema#",
    "type": "object",
    "additionalProperties": true,
    "definitions": {
        "hexString": {
            "type": "string",
            "pattern": "^([0-9a-fA-F]{2})+$"
        },
        "config": {
            "type": "object",
            "properties": {
                "keyUsages": {
                    "enum": [
                        "required",
                        "optional"
                    ],
                    "description": "Key usages",
                    "type": "string"
                },
                "token": {
                    "enum": [
                        "required",
                        "optional",
                        "static"
                    ],
                    "description": "Token",
                    "type": "string"
                }
            }
        },
        "card": {
            "type": "object",
            "properties": {
                "atr": {
                    "description": "ATR ",
                    "$ref": "#/definitions/hexString"
                },
                "mask": {
                    "description": "mask of card ATR",
                    "$ref": "#/definitions/hexString"
                },
                "name": {
                    "type": "string"
                },
                "readOnly": {
                    "type": "boolean",
                    "default": true
                },
                "driver": {
                    "$ref": "#/definitions/hexString",
                    "description": "GUID of driver"
                },
                "config": {
                    "description": "Configuration",
                    "$ref": "#/definitions/config"
                }
            },
            "required": [
                "atr",
                "name",
                "driver"
            ]
        },
        "os": {
            "oneOf": [
                {
                    "type": "object",
                    "properties": {
                        "x86": {
                            "description": "OS architecture x86",
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            ]
                        },
                        "x64": {
                            "description": "OS architecture x64",
                            "oneOf": [
                                {
                                    "type": "string"
                                },
                                {
                                    "type": "array",
                                    "items": {
                                        "type": "string"
                                    }
                                }
                            ]
                        }
                    },
                    "required": [
                        "x86",
                        "x64"
                    ]
                },
                {
                    "type": "string"
                },
                {
                    "type": "array",
                    "items": {
                        "type": "string"
                    }
                }
            ]
        },
        "driver": {
            "type": "object",
            "properties": {
                "id": {
                    "$ref": "#/definitions/hexString",
                    "description": "GUID for driver"
                },
                "name": {
                    "type": "string"
                },
                "file": {
                    "type": "object",
                    "description": "List of paths for PKCS#11 libraries",
                    "properties": {
                        "windows": {
                            "$ref": "#/definitions/os"
                        },
                        "linux": {
                            "$ref": "#/definitions/os"
                        },
                        "osx": {
                            "$ref": "#/definitions/os"
                        }
                    },
                    "minProperties": 1
                },
                "config": {
                    "description": "Configuration",
                    "$ref": "#/definitions/config"
                }
            },
            "required": [
                "id",
                "file"
            ]
        },
        "vars": {
            "type": "object"
        }
    },
    "properties": {
        "cards": {
            "description": "List of cards",
            "type": "array",
            "items": {
                "$ref": "#/definitions/card"
            }
        },
        "drivers": {
            "description": "List of drivers",
            "type": "array",
            "items": {
                "$ref": "#/definitions/driver"
            }
        },
        "version": {
            "description": "Version of file",
            "type": "string",
            "pattern": "^\\d+\\.\\d+\\.\\d+$"
        },
        "vars": {
            "description": "List of variables",
            "type": "object",
            "items": {
                "$ref": "#/definitions/vars"
            }
        }
    },
    "required": [
        "version",
        "cards",
        "drivers"
    ]
}